{{#if user}}
    {{>nav}}

    <div class="container mt-4">
        <div class="row">
            {{#if msgs}}
                <div class="col-12">
                    <div class="alert alert-info" role="alert">
                        {{msgs.[0]}}
                    </div>
                </div>
            {{/if}}
            
            {{#if results}}
                {{#each results}}
                    <div class="col-md-4 mb-4">
                        <div class="card shadow">
                            <div class="card-body">
                                <h5 class="card-title">{{titulo}}</h5>
                                <p class="card-text"><strong>Autores:</strong> {{autores}}</p>
                                <p class="card-text"><strong>Editora:</strong> {{editora}}</p>
                                <p class="card-text"><strong>Ano de Publicação:</strong> {{anopublicado}}</p>
                                <p class="card-text"><strong>Gênero:</strong> {{genero}}</p>
                                <p class="card-text"><strong>Sinopse:</strong> {{sinopse}}</p>
                                <p class="card-text"><strong>Estoque:</strong> {{estoque}}</p>
                                <p class="card-text"><strong>Preço:</strong> R$ {{preco}}</p>
                                <!-- Adicione mais detalhes conforme necessário -->
                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <a href="/books/editar/{{id}}" class="btn btn-primary">Editar</a>
                                    <form action="/books/apagar/{{id}}" method="GET">
                                        <button type="submit" class="btn btn-danger">Apagar</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/each}}
            {{else}}
                <div class="col-12">
                    <div class="alert alert-warning" role="alert">
                        Nenhum livro encontrado.
                    </div>
                </div>
            {{/if}}
        </div>
    </div>
{{/if}}
